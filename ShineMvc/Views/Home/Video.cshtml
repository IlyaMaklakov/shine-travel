@model ShineMvc.Models.VideoViewModel

<div class="row clearfix">
    <div class="col-md-8 left left2">
        <div class="video-block">
            <div class="video">
                <div class="embed-responsive embed-responsive-16by9">
                    <div class="embed-responsive-item" id="videoContainer"></div>
                </div>
            </div>

            <h1>@Model.VideoTitle</h1>
            @Model.VideoDescription
        </div>

        @if (Model.ShowBookingBlockAfter.HasValue)
        {
            <div class="booking-block">
                <div class="blue" id="bookingBlock" style="display: none;">
                    <div class="h2">
                        Хочешь с нами в кругосветное <br>
                        путешествие?
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-6">
                            37 мест уже забронировано
                        </div>
                        <div class="col-md-6 button">
                            <a href="" class="btn-default">Забронировать место</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="col-md-4 right">
        @Html.Partial("_VideoPlaylist", Model.VideoPlayList)
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/js")
    <script src="https://player.vimeo.com/api/player.js"></script>
    <script>
        jQuery(document).ready(function () {
            Shine.init(@Model.VimeoId);
        });
    </script>

    @if (Model.ShowBookingBlockAfter.HasValue)
    {
        <script>
            jQuery(document).ready(function () {
                setTimeout(function () {
                    $("#bookingBlock").show();
                }, @(Model.ShowBookingBlockAfter.GetValueOrDefault(0)) * 1000);
            });
        </script>
    }


